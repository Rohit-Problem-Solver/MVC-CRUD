<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function(){
            debugger;
            $("#loaderDiv").show();

            var myFormData = $("#MyForm").serialize();

            $.ajax({

                type: "POST",
                url: "ModelOperation/Create_Post",
                data: myFormData,
                success: function () {

                    $("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                }
            })
        })
    })

</script>